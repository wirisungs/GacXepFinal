@model IEnumerable<GacXep.Models.Category>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />

<div style="margin: 10px auto; width: 70%">
    <h2 style="text-align: center">QUẢN LÝ THỂ LOẠI SÁCH</h2>

    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary"})
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                Mã thể loại
            </th>
            <th>
                Tên thể loại
            </th>

            <th>
                Lệnh
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CatID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.CatID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.CatID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CatID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
