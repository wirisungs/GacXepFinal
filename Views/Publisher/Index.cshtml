@model IEnumerable<GacXep.Models.Publisher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />

<h2 style="text-align: center; font-weight: bold">QUẢN LÝ NHÀ XUẤT BẢN</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="Employees" asp-action="Index">
    <p>
        Tìm kiếm: <input type="text" name="SearchString" />
        <input type="submit" value="Search" class="btn btn-outline-success" />
    </p>
</form>
<table class="table table-bordered">
    <tr>
        
        <th>
            Nhà xuất bản
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.PubName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.PubID }, new { @class = "btn btn-outline-success" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.PubID }, new { @class = "btn btn-outline-primary" }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.PubID }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
