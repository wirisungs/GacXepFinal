@model IEnumerable<GacXep.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />

<h2 style="text-align: center;">QUẢN LÝ KHÁCH HÀNG</h2>

<table class="table table-bordered" style="text-align: center">
    <tr>
        <th>
            Số điện thoại
        </th>
        <th>
            Họ và tên
        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CusPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CusEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }, new {@class="btn btn-outline-primary"}) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }, new {@class="btn btn-outline-success"}) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }, new {@class="btn btn-outline-danger"})
        </td>
    </tr>
}

</table>